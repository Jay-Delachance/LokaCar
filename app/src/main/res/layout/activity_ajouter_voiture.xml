<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
        android:id="@+id/titre_voiture"
        android:layout_width="200dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textSize="30dp"
        android:text="Ajouter une voiture"
        android:textColor="#A7DBD8"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/marque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre_voiture"
            android:text="Marque :"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/input_marque"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marque"/>

        <TextView
            android:id="@+id/modele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_marque"
            android:text="ModÃ¨le :"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/input_modele"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modele"/>

        <TextView
            android:id="@+id/immatriculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_modele"
            android:text="Immatriculation :"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>

    <EditText
        android:id="@+id/input_immat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/immatriculation"/>

    <TextView
            android:id="@+id/agence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_immat"
            android:text="Agence :"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>

    <EditText
        android:id="@+id/input_agence"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agence"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="35dp"
        android:src="@drawable/plusblack"
        android:background="@android:color/transparent"
        android:onClick="confirmerAjoutVoiture"/>

</android.support.constraint.ConstraintLayout>